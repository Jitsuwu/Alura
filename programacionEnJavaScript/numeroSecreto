let numeroSecreo = 6;
let numeroUsuario=0;
let intentos=0;


while(numeroUsuario!=numeroSecreo)
{
    alert("Bienvenido al juego");
    let numeroUsuario = prompt.alert("Introduce tu numero");
    console.log(numeroUsuario);
    if(numeroUsuario=numeroSecreo)
    {
        alert(`Felicidades adivinaste el numero secreto ${numeroSecreo}`)
    }
    else
    {
        if(numeroUsuario>numeroSecreo)
        {
            alert("El numero es menor");
        }
        else
        {
            alert("El numero es mayor");
        }
        
        intentos=intentos+1;
    }
}